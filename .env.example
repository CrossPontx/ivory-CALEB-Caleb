# Database - Get from Neon.tech
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Authentication
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# File Upload (Cloudinary - optional)
# Sign up at cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-preset

# AI Generation (optional)
# OpenAI for text-to-image generation
OPENAI_API_KEY=sk-your-openai-key
# Replicate for Stable Diffusion models
REPLICATE_API_TOKEN=your-replicate-token

# Email Notifications (optional)
# Use services like SendGrid, Resend, or SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ivory.app

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Social Auth (optional - for OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
