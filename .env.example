# Database - Get from Neon.tech
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# App Configuration
NEXT_PUBLIC_BASE_URL=https://www.ivoryschoice.com
NODE_ENV=production

# Authentication
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://www.ivoryschoice.com

# AI Generation - OpenAI
# Get from platform.openai.com
OPENAI_API_KEY=sk-proj-your-openai-key

# Email - Resend (recommended)
# Get from resend.com
RESEND_API_KEY=re_your-resend-key
FROM_EMAIL=noreply@yourdomain.com

# Blob Storage - Vercel Blob
# Get from vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token

# Backblaze B2 Storage (alternative to Vercel Blob)
# Get from backblaze.com
B2_BUCKET_NAME=your-bucket-name
B2_KEY_ID=your-key-id
B2_APPLICATION_KEY=your-application-key
B2_ENDPOINT=https://s3.us-west-004.backblazeb2.com

# Cloudflare R2 Storage (alternative to Vercel Blob)
# Get from cloudflare.com/dashboard
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-public-url.r2.dev

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Maps API
# Get from console.cloud.google.com
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Auth - OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret
APPLE_CLIENT_ID=com.yourdomain.apple.auth
APPLE_CLIENT_SECRET=your-generated-jwt-token-from-generate-apple-secret-script

# Stripe Payment Processing
# Get from stripe.com/dashboard
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Apple In-App Purchases
# Get from App Store Connect > Users and Access > Keys > In-App Purchase
APPLE_IAP_SHARED_SECRET=your-apple-iap-shared-secret

# Legacy Options (optional - if not using above services)
# Cloudinary for image uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-preset

# SMTP for email (if not using Resend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ivory.app

# Replicate for AI (alternative to OpenAI)
REPLICATE_API_TOKEN=your-replicate-token

